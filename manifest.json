{
  "manifest_version": 3,
  "name": "TU Berlin GPA Calculator",
  "version": "1.0",
  "description": "Calculate your weighted GPA from your TU Berlin transcript page.",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": [
    "https://tuport.sap.tu-berlin.de/*",
    "https://aagw.zecm.tu-berlin.de/*",
    "https://*.tu-berlin.de/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
